{
    "name": "builder-prl",
    "version": "0.0.31",
    "description": "builder CLI",
    "types": "build/types/types.d.ts",
    "bin": {
        "builder": "bin/builder"
    },
    "scripts": {
        "format": "prettier --write **/*.{js,ts,tsx,json}",
        "lint": "tslint -p .",
        "clean-build": "rm -rf ./build",
        "compile": "tsc -p .",
        "build": "yarn format && yarn lint && yarn clean-build && yarn compile",
        "prepublishOnly": "yarn build",
        "test": "jest",
        "watch": "jest --watch",
        "snapupdate": "jest --updateSnapshot",
        "coverage": "jest --coverage"
    },
    "files": [
        "tsconfig.json",
        "tslint.json",
        "build",
        "LICENSE",
        "readme.md",
        "docs",
        "bin"
    ],
    "license": "MIT",
    "dependencies": {
        "archiver": "^5.3.0",
        "gluegun": "latest"
    },
    "devDependencies": {
        "@types/archiver": "^5.1.1",
        "@types/jest": "^24.0.18",
        "@types/node": "^16.11.7",
        "jest": "^24.1.0",
        "prettier": "^1.12.1",
        "ts-jest": "^24.1.0",
        "ts-node": "^8.4.1",
        "tslint": "^5.12.0",
        "tslint-config-prettier": "^1.17.0",
        "tslint-config-standard": "^8.0.1",
        "typescript": "^3.6.3"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node"
    },
    "prettier": {
        "semi": false,
        "singleQuote": true
    }
}
